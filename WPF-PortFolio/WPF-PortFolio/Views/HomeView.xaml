<UserControl x:Class="WPF_PortFolio.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_PortFolio.Views"
             mc:Ignorable="d" 
             Background="White"
             d:DesignHeight="450" 
             d:DesignWidth="400">
    <Grid>
        <!-- Home -->
        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition Height="auto"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>

        <!--#region Banner -->
        <TextBlock FontSize="{DynamicResource LargeFontSize}"
                   Text="WELCOME"
                   FontWeight="Bold"/>

        <Border Grid.Row="1" 
                CornerRadius="15" 
                Height="150">
            <Border.Background>
                <ImageBrush 
                    ImageSource="/DummyImages/Yohan.jpg">
                </ImageBrush>
            </Border.Background>
        </Border>
        <!--#endregion-->

        <!--#region Ranking List -->
        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="20"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <TextBlock Text="신사점수" 
                       FontWeight="Bold" 
                       FontSize="{DynamicResource LargeFontSize}"/>
            <ListView Grid.Row="1" 
                      ItemsSource="{Binding Users}"/>
            
        </Grid>
        <!--#endregion-->

        <!--#region Portfolio List -->
        <Grid Grid.Row="3">
            <Grid.RowDefinitions>
                <RowDefinition Height="20"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <TextBlock Text="포트폴리오" 
                       FontWeight="Bold" 
                       FontSize="{DynamicResource LargeFontSize}"/>

            <ListView Grid.Row="1" 
                      ItemsSource="{Binding Portfolios}" 
                      ItemContainerStyle="{DynamicResource PortfolioListItem}"
                      PreviewMouseWheel="ListView_PreviewMouseWheel">
                <ListView.ItemsPanel>
                    <ItemsPanelTemplate >
                        <WrapPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>
                <ListView.ItemTemplate>
                    <DataTemplate >
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="50"/>
                                <RowDefinition Height="20"/>
                                <RowDefinition Height="20"/>
                                <RowDefinition Height="80"/>
                                <RowDefinition Height="20"/>
                            </Grid.RowDefinitions>
                            <Image Source="{Binding Image}" Width="50" Height="50"/>
                            <TextBlock Text="{Binding Title}" 
                                       FontSize="{DynamicResource LargeFontSize}" 
                                       FontWeight="Bold"
                                       Grid.Row="1"/>
                            <TextBlock Text="{Binding Date}" Grid.Row="2"/>
                            <TextBlock Text="{Binding Description}" 
                                       TextWrapping="Wrap" 
                                       TextTrimming="CharacterEllipsis"
                                       Grid.Row="3"/>
                            <Button Content="{Binding URL}"
                                    Grid.Row="4"
                                    Style="{DynamicResource URLTextButton}"
                                    HorizontalAlignment="Left"
                                    />
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>
        <!--#endregion-->
    </Grid>
</UserControl>
